<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_item_person"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_person_grey"
        android:padding="6dp"
        android:layout_margin="18dp"
        android:background="@drawable/bg_transfer"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/transfer_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_item_person"
        android:layout_toStartOf="@id/img_item_person"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:hint="سینا خان بابایی"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/transfer_card_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_item_person"
        android:layout_toStartOf="@id/img_item_person"
        android:hint="6037 9981 6614 9449"
        android:textSize="15sp"
        android:layout_marginBottom="4dp"/>

</RelativeLayout>