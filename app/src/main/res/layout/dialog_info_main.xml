<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_first_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="بلولاین"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_second_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_first_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:text="همیشه به وقت همه جا" />

        <View
            android:id="@+id/dialog_line_first"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/dialog_second_txt"
            android:background="@color/grey_hint"/>


        <ImageView
            android:id="@+id/img_info_main_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_line_first"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="28dp"
            android:src="@drawable/ic_info_chat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="گفتگو"
            android:layout_alignTop="@id/img_info_main_chat"
            android:layout_alignBottom="@id/img_info_main_chat"
            android:layout_toStartOf="@id/img_info_main_chat"
            android:layout_marginEnd="18dp"/>

        <View
            android:id="@+id/dialog_line_second"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/img_info_main_chat"
            android:background="@color/grey_hint"/>

        <ImageView
            android:id="@+id/img_info_main_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_line_second"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="28dp"
            android:src="@drawable/ic_call" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_info_main_call"
            android:layout_alignBottom="@id/img_info_main_call"
            android:layout_marginEnd="18dp"
            android:layout_toStartOf="@id/img_info_main_call"
            android:text="تماس" />

        <View
            android:id="@+id/dialog_line_third"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/img_info_main_call"
            android:background="@color/grey_hint"/>

        <ImageView
            android:id="@+id/img_info_main_ques"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_line_third"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="28dp"
            android:src="@drawable/ic_question" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_info_main_ques"
            android:layout_alignBottom="@id/img_info_main_ques"
            android:layout_marginEnd="18dp"
            android:layout_toStartOf="@id/img_info_main_ques"
            android:text="سوالات متداول" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_eject_info_dialog"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/img_info_main_ques"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:text="انصراف"
            android:textColor="@color/blue_700"
            app:strokeWidth="0dp"
            app:cornerRadius="8dp"
            app:backgroundTint="#264F91E7" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>