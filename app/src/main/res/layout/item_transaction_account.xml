<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/img_account_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_transfer"
        android:padding="14dp"
        android:src="@drawable/ic_notif" />

    <TextView
        android:id="@+id/txt_account_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/img_account_transaction"
        android:text="خرید از فروشگاه" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_account_transaction"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/img_account_transaction"
        android:text="سه شنبه، 7 تیر 1401 22:01" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="30,000 ریال"
        android:layout_alignTop="@id/txt_account_transaction"
        android:layout_alignBottom="@id/txt_account_transaction"
        />
</RelativeLayout>